{
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/next",
        "config": {
          "buildCommand": "prisma generate && next build"
        }
      }
    ],
    "headers": [
      {
        "source": "/api/(.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=0, s-maxage=60, stale-while-revalidate=300"
          }
        ]
      },
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          }
        ]
      }
    ],
    "crons": [
      {
        "path": "/api/admin/trigger-stats-update",
        "schedule": "0 2 * * *"
      },
      {
        "path": "/api/admin/trigger-player-profiles", 
        "schedule": "0 23 * * 0"
      },
      {
        "path": "/api/voting/close-expired",
        "schedule": "*/30 * * * *"
      },
      {
        "path": "/api/chat/cleanup",
        "schedule": "0 3 * * *"
      }
    ]
  }